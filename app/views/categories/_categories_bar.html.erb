<div class="category-area">
  <div class="create-category-area">
    <% if user_signed_in? %>
      <%=link_to "新しいカテゴリーを作成する", new_category_path %>
    <% else %>
      <%= "カテゴリーの作成はログインが必要です" %>
    <% end %>
  </div>
  <h1>ーカテゴリー一覧ー</h1>
  <div class="categories">
    <% @categories.each do |category| %>
    <div class="category-name">
      <%= link_to category.name, category_contents_path(category.id) %>
      (<%= category.contents.size %>)
    </div>
    <% end %>
  </div>
</div>